CREATE DATABASE wayne_industries;

use wayne_industries;

CREATE TABLE users(
  ID INT AUTO_INCREMENT PRIMARY KEY,
  user_name VARCHAR (250),
  user_role VARCHAR(100),
  password VARCHAR (100)
);

CREATE TABLE stock(
  ID INT AUTO_INCREMENT PRIMARY KEY,
  item_name VARCHAR (200),
  category VARCHAR (100),
  qtde INT,
  in_use INT

)
